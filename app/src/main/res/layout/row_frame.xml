<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/row_background">

    <TextView
        android:id="@+id/text_view_frame_number"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="32dp"
        android:textStyle="bold"
        tools:text="10" />

    <TextView
        android:id="@+id/text_view_frame_score"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/text_view_frame_number"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="100" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_frame_score"
        android:layout_below="@id/text_view_frame_score"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_view_first_score"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            tools:text="8" />

        <TextView
            android:id="@+id/text_view_second_score"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            tools:text="/" />

        <TextView
            android:id="@+id/text_view_third_score"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:text="8"
            tools:visibility="visible" />
    </LinearLayout>
</RelativeLayout>